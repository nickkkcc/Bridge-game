<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_background"
    android:orientation="vertical"
    android:paddingBottom="22dp"
    android:layout_marginBottom="32dp">

    <TextView
        android:id="@+id/history_element_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:layout_marginTop="26dp"
        android:text="01.01.2023 12:00 - 01.01.2023 12:20"
        android:textColor="@color/white"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="18sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"/>

    <TextView
        android:id="@+id/history_element_owner"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="22dp"
        android:gravity="left"
        android:text="Создатель лобби: alias"
        android:textColor="@color/white"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"/>

    <TextView
        android:id="@+id/history_element_winner_team"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="16dp"
        android:gravity="left"
        android:text="Команда-победитель: Север-Юг"
        android:textColor="@color/white"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeStepGranularity="2sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="22dp"
        android:showDividers="middle"
        android:divider="@drawable/table_divider"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:divider="@drawable/table_divider"
            android:showDividers="middle"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/history_element_team1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Север-Юг: 500"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/history_element_team2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Запад-Восток: 600"
                android:textColor="@color/white"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="14sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:padding="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@drawable/table_divider"
            android:showDividers="middle"
            android:layout_weight="1">

            <Button
                android:id="@+id/history_element_north"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="alias_north"
                android:textColor="@color/white"
                android:background="@drawable/button_no_stroke"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/history_element_east"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="alias_east"
                android:textColor="@color/white"
                android:background="@drawable/button_no_stroke"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:layout_margin="10dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:divider="@drawable/table_divider"
            android:showDividers="middle"
            android:layout_weight="1">

            <Button
                android:id="@+id/history_element_south"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="alias_south"
                android:textColor="@color/white"
                android:background="@drawable/button_no_stroke"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/history_element_west"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="alias_east"
                android:textColor="@color/white"
                android:background="@drawable/button_no_stroke"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeStepGranularity="2sp"
                android:layout_margin="10dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>