<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/gradient_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/text_background"
        android:gravity="left"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:text="Робберный бридж"
        android:textColor="#aaaaaa"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_style"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="СОЗДАТЬ КОМНАТУ"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/join_button"
        app:layout_constraintEnd_toEndOf="@+id/join_button"
        app:layout_constraintStart_toStartOf="@+id/join_button" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:background="@drawable/button_style"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="ПРИСОЕДИНИТЬСЯ"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exit_account_button"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_gravity="right"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="ВЫЙТИ ИЗ АККАУНТА"
        android:textColor="#BDBDBD"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/join_button"
        app:layout_constraintStart_toStartOf="@+id/join_button"
        app:layout_constraintTop_toBottomOf="@+id/join_button" />

    <TextView
        android:id="@+id/joining_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Ожидание приглашения"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_background"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:padding="10dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/loading_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/joining_text"
        app:layout_constraintEnd_toEndOf="@+id/joining_text"
        app:layout_constraintStart_toStartOf="@+id/joining_text" />
</androidx.constraintlayout.widget.ConstraintLayout>
