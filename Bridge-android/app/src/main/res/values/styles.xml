<resources>

    <style name="Widget.Theme.BridgeAndroid.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.BridgeAndroid.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="LoginEditText">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/menu_yellow</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/yellow</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

    <style name="text_btn">
        <item name="textFillColor">@color/absolute_black</item>
    </style>


</resources>